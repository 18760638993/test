<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">


    <!--  设置字符过滤器-->
    <filter>
        <filter-name>CharacterEncodigFilter</filter-name>
        <filter-class>com.hwx.filter.CharacterEncodigFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodigFilter</filter-name>
        <!--   对所有路径进行拦截 -->
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--  设置用户登录过滤器-->
    <filter>
        <filter-name>SysFilter</filter-name>
        <filter-class>com.hwx.filter.SysFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SysFilter</filter-name>
        <!--   对/jsp下的路径进行拦截 -->
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>

    <!--设置用户登录界面首页-->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!--设置session过期时间-->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>


    <!--    注册用户登录的Servlet-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.hwx.servlet.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>

    <!--    用户退出系统的Servlet-->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.hwx.servlet.user.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/jsp/logout.do</url-pattern>
    </servlet-mapping>

    <!--    用户操作的Servlet-->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.hwx.servlet.user.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/jsp/user.do</url-pattern>
    </servlet-mapping>

    <!--注册 供应商的Servlet-->
    <servlet>
        <servlet-name>ProviderServlet</servlet-name>
        <servlet-class>com.hwx.servlet.provider.ProviderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProviderServlet</servlet-name>
        <url-pattern>/jsp/provider.do</url-pattern>
    </servlet-mapping>

    <!--注册 订单的Servlet-->
    <servlet>
        <servlet-name>BillServlet</servlet-name>
        <servlet-class>com.hwx.servlet.bill.BillServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BillServlet</servlet-name>
        <url-pattern>/jsp/bill.do</url-pattern>
    </servlet-mapping>

</web-app>
